{
  "name": "caldav-cli",
  "version": "0.2.0",
  "description": "A command-line CalDAV client for managing calendar events across multiple accounts",
  "type": "module",
  "bin": {
    "caldav-cli": "./dist/index.mjs"
  },
  "main": "./dist/index.mjs",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.mjs",
    "lint": "biome lint src/",
    "format": "biome format --write src/",
    "check": "biome check --write src/",
    "typecheck": "tsc --noEmit",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "prepublishOnly": "npm run typecheck && npm test && npm run build"
  },
  "keywords": [
    "caldav",
    "calendar",
    "cli",
    "icalendar",
    "ical",
    "oauth2",
    "icloud",
    "google-calendar"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cyberash-dev/caldav-cli.git"
  },
  "homepage": "https://github.com/cyberash-dev/caldav-cli#readme",
  "bugs": {
    "url": "https://github.com/cyberash-dev/caldav-cli/issues"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@inquirer/prompts": "8.2.0",
    "@napi-rs/keyring": "1.2.0",
    "chalk": "5.6.2",
    "cli-table3": "0.6.5",
    "commander": "14.0.3",
    "dayjs": "1.11.19",
    "ical.js": "2.2.1",
    "tsdav": "2.1.7"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.14",
    "@types/jest": "30.0.0",
    "@types/node": "22.19.10",
    "jest": "30.2.0",
    "ts-jest": "29.4.6",
    "ts-node": "10.9.2",
    "tsdown": "0.20.3",
    "tsx": "4.21.0",
    "typescript": "5.9.3"
  }
}
